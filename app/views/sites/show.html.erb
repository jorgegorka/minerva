<div class="container">
  <div class="nav-links">
    <%= link_to "â† Back to Sites", sites_path %> |
    <%= link_to "Edit", edit_site_path(@site) %> |
    <%= link_to "Delete", site_path(@site), 
                data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this site?" },
                class: "text-danger",
                aria_label: "Delete #{@site.title}" %>
  </div>

  <% if notice %>
    <div class="alert alert-success"><%= notice %></div>
  <% end %>

  <div class="card">
    <h1><%= @site.title %></h1>
    <p><%= "Category: #{@site.category.title}" if @site.category %></p>
    <p><%= "Url: #{@site.url}" %></p>
    <p><%= "Max Depth: #{@site.max_depth}" %></p>
    
    <hr style="margin: 30px 0; border: none; border-top: 1px solid #ddd;">
    
    <div style="color: #666; font-size: 0.9rem;">
      <p><strong>Created:</strong> <%= @site.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
      <% if @site.updated_at != @site.created_at %>
        <p><strong>Updated:</strong> <%= @site.updated_at.strftime("%B %d, %Y at %I:%M %p") %></p>
      <% end %>
    </div>
  </div>
</div>
