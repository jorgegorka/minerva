<div class="container">
  <div class="title-backlink">
    <h1>Sites</h1>
    <%= link_to "â† Back Home", root_path %>
  </div>

  <div class="nav-links">
    <%= link_to "New Site", new_site_path, class: "btn btn-primary btn-sm" %>
  </div>

  <% if notice %>
    <div class="alert alert-success"><%= notice %></div>
  <% end %>

  <% if @sites.any? %>
    <% @sites.each do |site| %>
      <div id="site_<%= site.id %>" class="card">
        <h3>
          <%= site.title %>
        </h3>
        <p><%= "Category: #{site.category.title}" if site.category %></p>
        <p><%= "Url: #{site.url}" %></p>
        <p><%= "Max Depth: #{site.max_depth}" if site.max_depth %></p>
        <p class="text-muted"><small>Created: <%= site.created_at.strftime("%B %d, %Y at %I:%M %p") %></small></p>
        <div class="card-actions">
          <%= link_to "View", site_path(site), class: "btn btn-secondary btn-sm" %>
          <%= link_to "Edit", edit_site_path(site), class: "btn btn-secondary btn-sm" %>
          <%= link_to "Delete", site_path(site), 
                      data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this sites?" },
                      class: "btn btn-danger btn-sm",
                      aria_label: "Delete #{site.title}" %>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="card">
      <p>No sites found. <%= link_to "Create your first site", new_site_path %>!</p>
    </div>
  <% end %>
</div>
