<div class="main-container">
  <h1>Sites</h1>

  <div class="txt-center margin-block">
    <%= link_to "New Site", new_site_path, class: "btn btn--reversed btn--small" %>
  </div>

  <% if notice %>
    <div class="alert alert--positive"><%= notice %></div>
  <% end %>

  <% if @sites.any? %>
    <% @sites.each do |site| %>
      <div id="site_<%= site.id %>" class="card">
        <h3><%= site.title %></h3>
        <% if site.category %>
          <p class="txt-subtle">Category: <%= site.category.title %></p>
        <% end %>
        <p class="txt-subtle">URL: <%= site.url %></p>
        <% if site.max_depth %>
          <p class="txt-subtle">Max Depth: <%= site.max_depth %></p>
        <% end %>
        <p class="txt-subtle txt-small">Created: <%= site.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
        <div class="card__actions">
          <%= link_to "View", site_path(site), class: "btn btn--small" %>
          <%= link_to "Edit", edit_site_path(site), class: "btn btn--small" %>
          <%= link_to "Delete", site_path(site),
                      data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this site?" },
                      class: "btn btn--negative btn--small",
                      aria_label: "Delete #{site.title}" %>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="card">
      <p>No sites found. <%= link_to "Create your first site", new_site_path %>!</p>
    </div>
  <% end %>
</div>
