<div class="container">
  <div class="title-backlink">
    <h1>Categories</h1>
    <%= link_to "â† Back Home", root_path %>
  </div>
  
  <div class="nav-links">
    <%= link_to "New Category", new_category_path, class: "btn btn-primary btn-sm" %>
  </div>

  <% if notice %>
    <div class="alert alert-success"><%= notice %></div>
  <% end %>

  <% if @categories.any? %>
    <% @categories.each do |category| %>
      <div id="document_<%= category.id %>" class="card">
        <h3>
          <%= category.title %>
        </h3>
        <div>
          <%= link_to "Edit", edit_category_path(category) %> |
          <%= link_to "Delete", category_path(category), 
                data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this document?" },
                class: "text-danger",
                aria_label: "Delete #{category.title}" %>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="card">
      <p>No categories found. <%= link_to "Create your first category", new_category_path %>!</p>
    </div>
  <% end %>
</div>
