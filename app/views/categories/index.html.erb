<div class="main-container">
  <h1>Categories</h1>

  <div class="txt-center margin-block">
    <%= link_to "New Category", new_category_path, class: "btn btn--reversed btn--small" %>
  </div>

  <% if notice %>
    <div class="alert alert--positive"><%= notice %></div>
  <% end %>

  <% if @categories.any? %>
    <% @categories.each do |category| %>
      <div id="category_<%= category.id %>" class="card">
        <h3><%= category.title %></h3>
        <div class="card__actions">
          <%= link_to "Edit", edit_category_path(category), class: "btn btn--small" %>
          <%= link_to "Delete", category_path(category),
                      data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this category?" },
                      class: "btn btn--negative btn--small",
                      aria_label: "Delete #{category.title}" %>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="card">
      <p>No categories found. <%= link_to "Create your first category", new_category_path %>!</p>
    </div>
  <% end %>
</div>
