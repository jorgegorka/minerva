<div class="main-container">
  <h1>Assets</h1>

  <div class="txt-center margin-block">
    <%= link_to "New Asset", new_asset_path, class: "btn btn--reversed btn--small" %>
  </div>

  <% if notice %>
    <div class="alert alert--positive"><%= notice %></div>
  <% end %>

  <% if @assets.any? %>
    <% @assets.each do |asset| %>
      <div id="asset_<%= asset.id %>" class="card">
        <h3 class="flex align-center gap-half">
          <%= asset.title %>
          <% if asset.file.attached? %>
            <%= icon_tag "paperclip", class: "txt-subtle" %>
          <% end %>
        </h3>
        <% if asset.category %>
          <p class="txt-subtle">Category: <%= asset.category.title %></p>
        <% end %>
        <p class="txt-subtle txt-small">Created: <%= asset.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
        <div class="card__actions">
          <%= link_to "View", asset_path(asset), class: "btn btn--small" %>
          <%= link_to "Edit", edit_asset_path(asset), class: "btn btn--small" %>
          <%= link_to "Delete", asset_path(asset),
                      data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this asset?" },
                      class: "btn btn--negative btn--small",
                      aria_label: "Delete #{asset.title}" %>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="card">
      <p>No assets found. <%= link_to "Create your first asset", new_asset_path %>!</p>
    </div>
  <% end %>
</div>
