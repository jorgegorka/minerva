<%= form_with model: asset, local: true, multipart: true, class: "flex flex-column gap" do |form| %>
  <% if asset.errors.any? %>
    <div class="alert alert--negative">
      <p class="margin-block-none font-weight-semibold"><%= pluralize(asset.errors.count, "error") %> prohibited this asset from being saved:</p>
      <ul class="margin-block-half">
        <% asset.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex flex-column gap-half">
    <%= form.label :title %>
    <%= form.text_field :title, class: "input", placeholder: "Enter asset title" %>
  </div>

  <div class="flex flex-column gap-half">
    <%= form.label :category_id, "Category" %>
    <%= form.select :category_id,
        options_for_select([["No category", ""]] + @categories.map { |id, title| [title, id] }, asset.category_id),
        {},
        { class: "input" } %>
  </div>

  <div class="flex flex-column gap-half">
    <%= form.label :file, "Attachment" %>
    <%= form.file_field :file, class: "input", direct_upload: true %>
    <% if asset.file.attached? && asset.persisted? %>
      <p class="txt-subtle txt-small margin-block-none">
        Current file:
        <%= link_to asset.file.filename.to_s, rails_blob_path(asset.file, disposition: "attachment") %>
        (<%= number_to_human_size(asset.file.byte_size) %>)
      </p>
    <% end %>
  </div>

  <div class="margin-block-start">
    <%= form.submit class: "btn btn--reversed full-width" %>
  </div>
<% end %>
