<div class="main-container">
  <nav class="txt-center margin-block">
    <%= link_to assets_path do %>
      <%= icon_tag "arrow-left" %> Back to Assets
    <% end %> |
    <%= link_to "Edit", edit_asset_path(@asset) %> |
    <%= link_to "Delete", asset_path(@asset),
                data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this asset?" },
                class: "txt-negative",
                aria_label: "Delete #{@asset.title}" %>
  </nav>

  <% if notice %>
    <div class="alert alert--positive"><%= notice %></div>
  <% end %>

  <div class="card">
    <h1><%= @asset.title %></h1>
    <% if @asset.category %>
      <p class="txt-subtle">Category: <%= @asset.category.title %></p>
    <% end %>

    <% if @asset.file.attached? %>
      <div class="card pad margin-block-start" style="--card-bg: var(--color-canvas);">
        <p class="flex align-center gap-half margin-block-none">
          <%= icon_tag "paperclip" %>
          <strong>Attachment:</strong>
          <%= link_to @asset.file.filename.to_s, rails_blob_path(@asset.file, disposition: "attachment") %>
          (<%= number_to_human_size(@asset.file.byte_size) %>)
        </p>
      </div>
    <% end %>

    <hr class="margin-block-double">

    <div class="txt-subtle txt-small">
      <p class="margin-block-none"><strong>Created:</strong> <%= @asset.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
      <% if @asset.updated_at != @asset.created_at %>
        <p class="margin-block-none"><strong>Updated:</strong> <%= @asset.updated_at.strftime("%B %d, %Y at %I:%M %p") %></p>
      <% end %>
    </div>
  </div>
</div>
