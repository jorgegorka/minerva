<div class="container">
  <div class="nav-links">
    <%= link_to "â† Back to Assets", assets_path %> |
    <%= link_to "Edit", edit_asset_path(@asset) %> |
    <%= link_to "Delete", asset_path(@asset), 
                data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this asset?" },
                class: "text-danger",
                aria_label: "Delete #{@asset.title}" %>
  </div>

  <% if notice %>
    <div class="alert alert-success"><%= notice %></div>
  <% end %>

  <div class="card">
    <h1><%= @asset.title %></h1>
    <h2><%= "Category: #{@asset.category.title}" if @asset.category %></h2>
    
    <% if @asset.file.attached? %>
      <div style="margin-top: 20px; padding: 15px; background-color: #f8f9fa; border-radius: 5px;">
        <p style="margin: 0;"><strong>ðŸ“Ž Attachment:</strong>
        <%= link_to @asset.file.filename.to_s, rails_blob_path(@asset.file, disposition: "attachment"), 
                    style: "color: #007bff; text-decoration: none;" %>
        (<%= number_to_human_size(@asset.file.byte_size) %>)
        </p>
      </div>
    <% end %>
    
    <hr style="margin: 30px 0; border: none; border-top: 1px solid #ddd;">
    
    <div style="color: #666; font-size: 0.9rem;">
      <p><strong>Created:</strong> <%= @asset.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
      <% if @asset.updated_at != @asset.created_at %>
        <p><strong>Updated:</strong> <%= @asset.updated_at.strftime("%B %d, %Y at %I:%M %p") %></p>
      <% end %>
    </div>
  </div>
</div>
